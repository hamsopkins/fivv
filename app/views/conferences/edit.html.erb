<h1>Edit a conference</h1>
<%= form_for(@conference, url: conference_path(@conference), method: 'patch') do |f| %>
	<div>
		<%= f.label(:name, "Conference name") %>
		<%= f.text_field(:name) %>
	</div>
	<div>
		<%= f.label(:start_time, "Start time") %>
		<%= f.datetime_local_field(:start_time) %>
	</div>
	<div>
		<%= f.label(:end_time, "End time") %>
		<%= f.datetime_local_field(:end_time) %>
	</div>
	<div>
	<%= f.label(:contacts, "Participants") %>
	<input name="conference[contacts][]" type="hidden" value="" />
	<select multiple="multiple" size="5" name="conference[contacts][]" id="conference_contacts">
	<% @conference.user.contacts.each do |contact| %>
		<option value="<%= contact.id %>" <%= "selected='selected'" if ConferenceContact.where("contact_id = ? AND conference_id = ?", contact.id, @conference.id).any? %>><%= contact.name %></option>
	<% end %>
	</select>
	</div>
	<div>
		<%= f.label(:moderated, "Moderated conference?") %>
		<%= f.radio_button(:moderated, "false") %>
		<%= f.label(:moderated_false, "no") %>
		<%= f.radio_button(:moderated, "true", checked: true) %>
		<%= f.label(:moderated_true, "yes") %>
	</div>
	<div>
		<%= f.submit("Update conference") %>
	</div>
<% end %>
