<h1>Your Contacts</h1>
<% if @contacts %>
	<% @contacts.each do |contact| %>
		<div>
			<h2><%= link_to(contact.name, @contact) %></h2>
			<span>Phone: <%= contact.phone %></span>
			<span><%= link_to("Delete", contact, method: "delete") %> | <%= link_to("Edit", edit_contact_path(contact)) %></span>
		</div>
	<% end %>
<% else %>
	<div>You don't have any contacts yet!</div>
<% end %>
<%= link_to("New Contact", new_contact_path) %>
