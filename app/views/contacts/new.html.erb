<h1>Create a contact</h1>
<fieldset>
	<%= form_for(@contact, url: contacts_path, method: 'post', class: 'form-horizontal') do |f| %>
		<div class="form-group">
			<%= f.label(:name, "Name", class: "col-lg-2 control-label") %>
			<div class="col-lg-10">
				<%= f.text_field(:name, class: "form-control") %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label(:phone, "Phone", class: "col-lg-2 control-label") %>
			<div class="col-lg-10">
				<%= f.telephone_field(:phone, class: "form-control", maxlength: 10) %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label(:time_zone, "Time zone", class: "col-lg-2 control-label") %>
			<div class="col-lg-10">
				<%= f.time_zone_select(:time_zone, ActiveSupport::TimeZone.us_zones, {default: "Eastern Time (US & Canada)"}, class: "form-control") %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-lg-10 col-lg-offset-2">
				<%= f.submit("Create Contact", class: "btn btn-primary") %>
			</div>
		</div>
	<% end %>
</fieldset>
<%= link_to("Return to contacts", contacts_path, class: "btn btn-success") %>
<%= javascript_include_tag 'jquery.maskedinput' %>
<%= javascript_tag do %>
	jQuery(function($){
   $("#contact_phone").mask("999-999-9999");
	});
<% end %>
