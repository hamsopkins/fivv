<!DOCTYPE html>
<html>
  <head>
    <title>Fivv</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div>
  	<% if logged_in? %>
  	<%= link_to("Log out", logout_path_url, method: "delete") %>
  	<% end %>
  </div>
  <div>
    <% if @errors %>
      <h2>Errors</h2>
      <ul>
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
      </ul>
    <% end %>
    <%= yield %>
  </body>
</html>
