<h1>Update Account Settings</h1>
<fieldset>
	<%= form_for(@user, url: @user, method: "patch", class: "form-horizontal") do |f| %>
		<div class="form-group">
			<%= f.label(:name, "Name", class: "col-lg-2 control-label") %>
			<div class="col-lg-10">
				<%= f.text_field(:name, class: "form-control") %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label(:company, "Your company", class: "col-lg-2 control-label") %>
			<div class="col-lg-10">
				<%= f.text_field(:company, placeholder: 'optional', class: "form-control") %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label(:phone, "Mobile number (digits only)", class: "col-lg-2 control-label") %>
			<div class="col-lg-10">
				<%= f.telephone_field(:phone, class: "form-control", maxlength: 10) %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label(:time_zone, "Time zone", class: "col-lg-2 control-label") %>
			<div class="col-lg-10">
				<%= f.time_zone_select(:time_zone, ActiveSupport::TimeZone.us_zones, {default: "Eastern Time (US & Canada)"}, {class: "form-control"}) %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label(:old_password, "Current password", class: "col-lg-2 control-label") %>
			<div class="col-lg-10">
				<%= f.password_field(:old_password, class: "form-control", placeholder: "required to update account settings") %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label(:password, "New Password", class: "col-lg-2 control-label") %>
			<div class="col-lg-10">
				<%= f.password_field(:password, class: "form-control", placeholder: "leave blank if not changing password") %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label(:password_confirmation, "Reenter new password", class: "col-lg-2 control-label") %>
			<div class="col-lg-10">
				<%= f.password_field(:password_confirmation, class: "form-control", placeholder: "leave blank if not changing password") %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-lg-10 col-lg-offset-2">
				<%= f.submit("Update settings", class: "btn btn-primary") %>
			</div>
		</div>
	<% end %>
</fieldset>
