<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Hi, <%= @user.name %>!</h3>
  </div>
  <div class="panel-body">
  	<p><%= distance_of_time_in_words(Time.now, @user.expiration).capitalize %> remaining before your trial account expires!</p>
    <% if @user.conference_count >= 5 %>
      <p>You have scheduled the maximum number of conferences allowed for your trial account.</p>
    <% end %>
  </div>
</div>
<% if @current_conferences.any? %>
<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title">Conferences in Progress</h3>
  </div>
  <div class="panel-body">
  	<ul>
			<% @current_conferences.each do |c| %>
		    <li><%= c.name %> <%= link_to("Join", c, class: "btn btn-success btn-xs") %></li>
			<% end %>
		</ul>
  </div>
</div>
<% end %>
